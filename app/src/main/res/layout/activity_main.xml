<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btn_show_normal_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="显示一个普通风格的对话框" />

        <Button
            android:id="@+id/btn_set_btn_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="设置按钮背景和文子颜色" />

        <Button
            android:id="@+id/btn_singlebtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="单个按钮" />

        <Button
            android:id="@+id/btn_show_normal_dialog_with_listener"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="button点击回调" />

        <Button
            android:id="@+id/btn_show_normal_dialog_with_items"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="包含一个列表的对话框" />

        <Button
            android:id="@+id/btn_show_normal_dialog_progress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="进度框" />

        <Button
            android:id="@+id/btn_show_normal_dialog_progress_titanic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="TITANIC风格的进度框" />

        <Button
            android:id="@+id/btn_show_normal_dialog_progress_avloading"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="AVLoading风格的进度框" />

        <Button
            android:id="@+id/custom_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="自定义dialog的layout布局" />

        <Button
            android:id="@+id/custom_dialog_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="自定义dialog的中间的消息布局" />

        <Button
            android:id="@+id/sweetAlert_dialog_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="SweetAlert_dialog_SUCCESS" />
        <Button
            android:id="@+id/sweetAlert_dialog_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="SweetAlert_dialog_ERROR" />
    </LinearLayout>
</ScrollView>